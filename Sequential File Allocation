#include <iostream>
using namespace std;
int main() {
 int start[10], length[10], n;
 cout << "Enter number of files: ";
 cin >> n;
 for (int i = 0; i < n; i++) {
 cout << "File " << i+1 << " start block and length: ";
 cin >> start[i] >> length[i];
 }
 cout << "\nFile\tStart\tLength\n";
 for (int i = 0; i < n; i++)
 cout << i+1 << "\t" << start[i] << "\t" << length[i] << endl;
 return 0;
}
Enter number of files: 2
File 1 start block and length: 12
1
File 2 start block and length: 2
3

File	Start	Length
1	12	1
2	2	3
